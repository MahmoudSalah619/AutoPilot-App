{
  "expo": {
    "name": "AutoPilot",
    "slug": "autopilot-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/white_on_trans.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.nova.autopilotapp"
    },
    "android": {
      "package": "com.nova.autopilot",
      "splash": {
        "image": "./assets/images/nova-black.png",
        "resizeMode": "contain",
        "backgroundColor": "#4682c2",
        "backgroundImage": "./assets/images/white_on_trans.png"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/nova-black.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4682c2",
          "backgroundImage": "./assets/images/white_on_trans.png"
        }
      ],
      "expo-localization",
      [
        "sentry-expo",
        {
          "organization": "autopilot-app",
          "project": "autopilot-app",
          "url": "https://sentry.io"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
